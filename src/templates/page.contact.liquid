<div class="page-width">
  <h1>{{ page.title }}</h1>

  <div class="rte">
    {{ page.content }}
  </div>

  {%- form 'contact', class: 'form' -%}

    {%- if form.posted_successfully? -%}
      <div class="form-success">
        {{ 'contact.form.post_success' | t }}
      </div>
    {%- endif -%}

    {{ form.errors | default_errors }}

    <div class="form__group">
      <label for="ContactFormName" class="label-hidden">{{ 'contact.form.name' | t }}</label>
      <input type="text"
        name="contact[name]"
        id="ContactFormName"
        placeholder="{{ 'contact.form.name' | t }}"
        value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
    </div>

    <div class="form__group">
      <label for="ContactFormEmail" class="label-hidden">{{ 'contact.form.email' | t }}</label>
      <input type="email"
        name="contact[email]"
        id="ContactFormEmail"
        placeholder="{{ 'contact.form.email' | t }}"
        value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
        spellcheck="false"
        autocomplete="off"
        autocapitalize="off">
    </div>

    <div class="form__group">
      <label for="ContactFormPhone" class="label-hidden">{{ 'contact.form.phone' | t }}</label>
      <input type="tel"
        name="contact[phone]"
        id="ContactFormPhone"
        placeholder="{{ 'contact.form.phone' | t }}"
        value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
        pattern="[0-9-]*">
    </div>

    <div class="form__group">
      <label for="ContactFormMessage" class="label-hidden">{{ 'contact.form.message' | t }}</label>
      <textarea rows="10"
        name="contact[body]"
        id="ContactFormMessage"
        placeholder="{{ 'contact.form.message' | t }}">
        {%- if form.body -%}
          {{ form.body }}
        {%- endif -%}
      </textarea>
    </div>

    <div class="form__group">
      <input type="submit" class="btn btn--primary" value="{{ 'contact.form.send' | t }}">
    </div>

  {%- endform -%}
</div>
